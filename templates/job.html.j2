<a class="btn card-body text-dark text-decoration-none text-start" href="{{ base_url }}/output/{{ job.type }}/{{ application }}/{{ job.board }}:{{ job.toolchain }}.txt" role="button" target="_blank" rel="noopener noreferrer">
    <div class="row align-items-center">
        <div class="col col-md-6">
            <i class="bi-{% if not job.status %}x-circle-fill text-danger me-1">{% else %}check-circle-fill me-1 text-success">{% endif %}</i>{{ job.board }}:{{ job.toolchain }}
        </div>
        <div class="col col-md-4">
            <i class="bi-wrench me-1"></i>{{ job.worker }}
        </div>
        <div class="col col-md-2">
            <i class="bi-clock me-1"></i>{{ "%.2f"|format(job.runtime) }}s
        </div>
    </div>
</a>
